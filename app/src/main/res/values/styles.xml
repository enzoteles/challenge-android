<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextBlack64spLogoSobre" parent="ThemeOverlay.AppCompat.Light">
            <item name="android:textColor">#4a4a4a</item>
        <item name="android:textSize">64sp</item>
        <item name="typeface">Pacifico.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBlack14spNomeDev" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBlack12sData" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextBlackToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#4a4a4a</item>
        <item name="typeface">Pacifico.ttf</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextBlackNavBarTitle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#4a4a4a</item>
        <item name="typeface">Pacifico.ttf</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>


</resources>
