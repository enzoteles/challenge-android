<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="5"
    >

        <ImageView
                android:id="@+id/iv_produto_mais_vendido"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/tag_menu"
                android:layout_gravity="center"
        />

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="3.8"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
        >
            <TextView
                    android:id="@+id/tv_nome_produto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do produto com uma descrição grandona"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="25dp"
            />

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="2"
                          android:orientation="horizontal">
                <TextView
                        android:id="@+id/tv_preco_de"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="De: 9999,99"
                        android:textSize="13sp"
                        android:textColor="@android:color/black"
                />
                <TextView
                        android:id="@+id/tv_preco_por"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Por: 9999,98"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="#f15025"
                />
            </LinearLayout>

        </LinearLayout>

        <ImageView
                android:id="@+id/iv_seta"
                android:layout_width="0dp"
                android:layout_weight=".2"
                android:layout_height="wrap_content"
                android:src="@drawable/disclosure_indicator"
                android:layout_gravity="center"
        />

    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@android:color/darker_gray"/>


</LinearLayout>