<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/layout_home"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="5.5"
              android:orientation="vertical"
              android:weightSum="5">

    <RelativeLayout android:id="@+id/frag_banners" android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
    />
    <RelativeLayout android:id="@+id/frag_categorias" android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="1.7"/>
    <RelativeLayout android:id="@+id/frag_prod_mais_vend" android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="2.5"/>
</LinearLayout>